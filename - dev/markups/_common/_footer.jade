footer.footer
    .footer__top
        .conteiner
            .footer__left
                a(href="#").logo.logo_footer
                    img(src="/img/logos/logo-footer.png" alt="cooltech logo").logo__img
                    .logo__text cooltech
            .footer__right
                ul.socials.footer_socials
                    - var items = ['fb', 'vk', 'tw']
                    each item in items
                        li(class="socials__item socials__item" + item)
                            a(href="#").socials__link
                ul.footer__nav
                    - var items = ["Планшеты", "Мобильные телефоны", "Mp3 плееры", "Персональные компьютеры", "Аксессуары", "Бытовая техника"]
                    each item in items
                        li.footer__nav-item
                            a(href="#").footer__nav-link
    .footer__bottom
        .container
            .footer__copyright All rights reserved. 2015. No copy allowed.